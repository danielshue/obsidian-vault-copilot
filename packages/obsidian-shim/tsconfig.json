{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["DOM", "ES2022"],
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "lucide": ["../../node_modules/lucide"],
      "marked": ["../../node_modules/marked"],
      "js-yaml": ["../../node_modules/js-yaml"]
    }
  },
  "include": ["src/**/*.ts"]
}
