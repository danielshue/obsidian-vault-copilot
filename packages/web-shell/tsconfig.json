{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["DOM", "ES2022"],
    "noEmit": true,
    "paths": {
      "obsidian": ["../obsidian-shim/src/index.ts"],
      "@vault-copilot/obsidian-shim/*": ["../obsidian-shim/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
