{
  "$schema": "../../../schema/manifest.schema.json",
  "id": "daily-note-automation",
  "name": "Daily Note Automation",
  "version": "1.0.0",
  "type": "automation",
  "description": "Automatically creates and populates daily notes each morning at 6 AM with yesterday's summary",
  "author": {
    "name": "Vault Copilot Team",
    "url": "https://github.com/danielshue/obsidian-vault-copilot"
  },
  "files": [
    {
      "source": "automation-config.json",
      "installPath": ".obsidian/automations/"
    }
  ],
  "repository": "https://github.com/danielshue/obsidian-vault-copilot",
  "license": "MIT",
  "minVaultCopilotVersion": "0.1.0",
  "categories": ["Productivity", "Journaling"],
  "tags": ["automation", "daily-notes", "scheduling"],
  "tools": ["create_note", "read_note"],
  "preview": "preview.png",
  "automation": {
    "triggers": [
      {
        "type": "schedule",
        "schedule": "0 6 * * *"
      }
    ],
    "actions": [
      {
        "type": "run-agent",
        "agentId": "daily-journal",
        "input": {
          "mode": "create",
          "includeYesterdaySummary": true
        }
      }
    ],
    "enabled": false,
    "runOnInstall": false
  }
}
