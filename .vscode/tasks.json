{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Deploy Plugin",
			"type": "shell",
			"command": "npm run build && node deploy.mjs",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Build with esbuild and Deploy",
			"type": "shell",
			"command": "node esbuild.config.mjs production && node deploy.mjs",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Deploy Only (no build)",
			"type": "shell",
			"command": "node deploy.mjs",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Obsidian: Reload Plugin",
			"type": "shell",
			"command": "obsidian plugin:reload id=obsidian-vault-copilot",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Obsidian: Show JS Errors",
			"type": "shell",
			"command": "obsidian dev:errors",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Obsidian: Show Console",
			"type": "shell",
			"command": "obsidian dev:console limit=100",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Obsidian: Take Screenshot",
			"type": "shell",
			"command": "obsidian dev:screenshot path=screenshot.png",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Obsidian: Toggle DevTools",
			"type": "shell",
			"command": "obsidian devtools",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Obsidian: Toggle Mobile Emulation",
			"type": "shell",
			"command": "obsidian dev:mobile on",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Obsidian: Plugin Info",
			"type": "shell",
			"command": "obsidian plugin id=obsidian-vault-copilot",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Obsidian: Capture Doc Screenshots",
			"type": "shell",
			"command": "node scripts/capture-screenshots.mjs --no-timestamp",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Obsidian: Capture Doc Screenshots (Mobile)",
			"type": "shell",
			"command": "node scripts/capture-screenshots.mjs --no-timestamp --mobile",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Check git status",
			"type": "shell",
			"command": "git status",
			"isBackground": false,
			"group": "build"
		},
		{
			"type": "func",
			"label": "func: host start",
			"command": "host start",
			"problemMatcher": "$func-node-watch",
			"isBackground": true,
			"dependsOn": "npm watch (functions)",
			"options": {
				"cwd": "${workspaceFolder}/azure-functions"
			}
		},
		{
			"type": "shell",
			"label": "npm build (functions)",
			"command": "npm run build",
			"dependsOn": "npm clean (functions)",
			"problemMatcher": "$tsc",
			"options": {
				"cwd": "${workspaceFolder}/azure-functions"
			}
		},
		{
			"type": "shell",
			"label": "npm watch (functions)",
			"command": "npm run watch",
			"dependsOn": "npm clean (functions)",
			"problemMatcher": "$tsc-watch",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/azure-functions"
			}
		},
		{
			"type": "shell",
			"label": "npm install (functions)",
			"command": "npm install",
			"options": {
				"cwd": "${workspaceFolder}/azure-functions"
			}
		},
		{
			"type": "shell",
			"label": "npm prune (functions)",
			"command": "npm prune --production",
			"dependsOn": "npm build (functions)",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/azure-functions"
			}
		},
		{
			"type": "shell",
			"label": "npm clean (functions)",
			"command": "npm run clean",
			"dependsOn": "npm install (functions)",
			"options": {
				"cwd": "${workspaceFolder}/azure-functions"
			}
		}
	]
}
